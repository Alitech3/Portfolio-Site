{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"plugin:@next/next/recommended"

    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
	"ignorePatterns":[
		"react/react-in-jsx-scope"
	],
    "rules": {
        "indent": [
            "error",
            "tab",
        ],
		"react/no-unescaped-entities": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
